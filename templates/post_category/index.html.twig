{% extends 'base.html.twig' %}

{% block title %}PostCategory index{% endblock %}

{% block body %}
    <h1>PostCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_category in post_categories %}
            <tr>
                <td>{{ post_category.id }}</td>
                <td>{{ post_category.title }}</td>
                <td>
                    <a href="{{ path('app_post_category_show', {'id': post_category.id}) }}">show</a>
                    <a href="{{ path('app_post_category_edit', {'id': post_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_category_new') }}">Create new</a>
{% endblock %}
